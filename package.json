{
    "name": "CCA",
    "version": "3.2.0",
    "description": "Colour Contrast Analyser (CCA)",
    "main": "src/main.js",
    "private": true,
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "cross-env NODE_ENV=dev electron .",
        "dist": "electron-builder",
        "dist-portable32": "electron-builder --win portable --ia32"
    },
    "author": "Cédric Trévisan <ctrevisan@tpgi.com>",
    "license": "GPL-3.0",
    "devDependencies": {
        "cross-env": "^7.0.3",
        "electron": "21.2.2",
        "electron-builder": "^23.6.0",
        "electron-builder-notarize": "^1.5.0"
    },
    "dependencies": {
        "color-blind": "^0.1.3",
        "color-convert": "^2.0.1",
        "color-name": "^1.1.4",
        "dotenv": "^16.0.3",
        "electron-browser-storage": "^1.0.7",
        "electron-log": "^4.4.8",
        "electron-store": "^8.1.0",
        "electron-updater": "^5.3.0",
        "focus-visible": "^5.2.0",
        "simple-swizzle": "^0.2.2"
    },
    "build": {
        "appId": "com.electron.cca",
        "productName": "Colour Contrast Analyser",
        "compression": "maximum",
        "directories": {},
        "releaseInfo": {
            "releaseNotesFile": "CHANGELOG.md"
        },
        "afterSign": "electron-builder-notarize",
        "mac": {
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "category": "public.app-category.developer-tools",
            "artifactName": "${name}-${env.ARCH}-${version}.${ext}",
            "icon": "build/icon.icns",
            "type": "distribution",
            "publish": [
                "github"
            ]
        },
        "dmg": {
            "sign": false
        },
        "win": {
            "icon": "build/icon.ico",
            "publisherName": [
                "TPG Interactive, LLC"
            ],
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "publish": [
                "github"
            ]
        },
        "nsis": {
            "artifactName": "${name}-Setup-${env.ARCH}-${version}.${ext}",
            "oneClick": false,
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true,
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "uninstallDisplayName": "Uninstall Colour Contrast Analyser (CCA)",
            "createDesktopShortcut": true
        },
        "portable": {
            "artifactName": "${name}-Portable-${env.ARCH}-${version}.${ext}"
        },
        "publish": {
            "provider": "github",
            "repo": "CCAe",
            "owner": "ferllings",
            "releaseType": "release"
        }
    }
}
